!*font: -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

!---------------------------------------------
! URxvt settings
! Colors from solarized
!---------------------------------------------
URxvt.font: xft:DejavuSansMono



URxvt.saveLines: 32768
URxvt.scrollBar: false
URxvt.internalBorder: 1
URxvt.cursorBlink: 0
URxvt.termName: xterm-color
URxvt.visualBell: off
URxvt.urgentOnBell: true
URxvt.fading: 0
URxvt.depth: 32
URxvt.allow_bold: false

URxvt*letterSpace: -1

!! Colors source: http://github.com/altercation/solarized
*background: #002b36
*foreground: #657b83
*fadeColor: #002b36
*cursorColor: #93a1a1
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1

!! black
*color0: #073642
*color8: #002b36

!! red
*color1: #dc322f
*color9: #cb4b16

!! green
*color2: #859900
*color10: #586e75

!! yellow dark/light
*color3: #b58900
*color11: #657b83

!! blue dark/light
*color4: #268bd2
*color12: #839496

!! magenta dark/light
*color5: #d33682
*color13: #6c71c4

!! cyan dark/light
*color6: #2aa198
*color14: #93a1a1

!! white dark/light
*color7: #eee8d5
*color15: #fdf6e3

! End of URxvt config
!---------------------------------------------

! Set MetaSendsEscape, makes IRSSI works well.
xterm*metaSendsEscape: true

Xft.hinting: 1
Xft.hintstyle: hintslight
Xft.antialias: 1
Xft.dpi: 92x90

Xcursor.theme: osx
